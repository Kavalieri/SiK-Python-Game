# =============================================================================
# SiK Python Game - Environment Variables Example
# =============================================================================
# Este archivo contiene las variables de entorno que el proyecto puede utilizar
# Copia este archivo como .env y ajusta los valores según tu entorno local

# -----------------------------------------------------------------------------
# Configuración de Debug y Desarrollo
# -----------------------------------------------------------------------------

# Habilitar modo debug (true/false)
DEBUG=false

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Mostrar información de rendimiento (true/false)
SHOW_PERFORMANCE_INFO=false

# -----------------------------------------------------------------------------
# Configuración de Juego
# -----------------------------------------------------------------------------

# Directorio de guardado personalizado (opcional)
# SAVES_DIR=./saves

# Directorio de logs personalizado (opcional)
# LOGS_DIR=./logs

# Directorio de configuración personalizado (opcional)
# CONFIG_DIR=./config

# Directorio de assets personalizado (opcional)
# ASSETS_DIR=./assets

# -----------------------------------------------------------------------------
# Configuración de Display
# -----------------------------------------------------------------------------

# Resolución por defecto (ancho x alto)
DEFAULT_WIDTH=1280
DEFAULT_HEIGHT=720

# FPS por defecto
DEFAULT_FPS=60

# Habilitar pantalla completa al inicio (true/false)
DEFAULT_FULLSCREEN=false

# Habilitar VSync (true/false)
DEFAULT_VSYNC=true

# -----------------------------------------------------------------------------
# Configuración de Audio
# -----------------------------------------------------------------------------

# Habilitar audio al inicio (true/false)
DEFAULT_AUDIO_ENABLED=true

# Volumen maestro por defecto (0.0 - 1.0)
DEFAULT_MASTER_VOLUME=1.0

# Volumen de música por defecto (0.0 - 1.0)
DEFAULT_MUSIC_VOLUME=0.7

# Volumen de efectos por defecto (0.0 - 1.0)
DEFAULT_SFX_VOLUME=0.8

# -----------------------------------------------------------------------------
# Configuración de Base de Datos SQLite
# -----------------------------------------------------------------------------

# Ruta del archivo de base de datos
DATABASE_PATH=saves/game_database.db

# Tamaño del pool de conexiones SQLite
DATABASE_POOL_SIZE=5

# Timeout para operaciones de base de datos (segundos)
DATABASE_TIMEOUT=30

# Habilitar backups automáticos (true/false)
DATABASE_AUTO_BACKUP=true

# -----------------------------------------------------------------------------
# Configuración de Testing
# -----------------------------------------------------------------------------

# Base de datos de pruebas
TEST_DATABASE_PATH=:memory:

# Directorio temporal para tests
TEST_TEMP_DIR=./temp_test

# Habilitar tests visuales (true/false)
ENABLE_VISUAL_TESTS=false

# -----------------------------------------------------------------------------
# Configuración de Desarrollo y IA
# -----------------------------------------------------------------------------

# Habilitar logging extendido para desarrollo con IA (true/false)
AI_DEVELOPMENT_MODE=false

# Habilitar guardado automático de estadísticas de desarrollo (true/false)
SAVE_DEV_STATS=false

# Intervalos de guardado automático (segundos)
AUTO_SAVE_INTERVAL=300

# -----------------------------------------------------------------------------
# Configuración de Rendimiento
# -----------------------------------------------------------------------------

# Límite de FPS para bajo rendimiento
LOW_PERFORMANCE_FPS=30

# Número máximo de partículas en pantalla
MAX_PARTICLES=500

# Número máximo de enemigos simultáneos
MAX_ENEMIES=50

# Habilitar optimizaciones gráficas (true/false)
ENABLE_GRAPHICS_OPTIMIZATION=true

# -----------------------------------------------------------------------------
# Configuración de Red (para futuras características multijugador)
# -----------------------------------------------------------------------------

# Puerto por defecto para servidor local
DEFAULT_SERVER_PORT=8080

# IP por defecto para servidor local
DEFAULT_SERVER_HOST=localhost

# Timeout de conexión de red (segundos)
NETWORK_TIMEOUT=10

# -----------------------------------------------------------------------------
# Paths de Herramientas de Desarrollo
# -----------------------------------------------------------------------------

# Ruta de Poetry (opcional, se detecta automáticamente)
# POETRY_PATH=poetry

# Ruta de Python (opcional, se detecta automáticamente)
# PYTHON_PATH=python

# Ruta de Git (opcional, se detecta automáticamente)
# GIT_PATH=git

# -----------------------------------------------------------------------------
# Configuración de Seguridad
# -----------------------------------------------------------------------------

# Semilla para generación de claves de encriptación (dejar vacío para auto-generar)
# ENCRYPTION_SEED=

# Habilitar verificación de integridad de archivos (true/false)
ENABLE_FILE_INTEGRITY_CHECK=true

# -----------------------------------------------------------------------------
# Configuración de Sistema
# -----------------------------------------------------------------------------

# Sistema operativo objetivo (auto-detect, windows, linux, macos)
TARGET_OS=auto-detect

# Arquitectura objetivo (auto-detect, x64, x86, arm64)
TARGET_ARCH=auto-detect

# Habilitar detección automática de hardware (true/false)
ENABLE_HARDWARE_DETECTION=true

# =============================================================================
# NOTAS IMPORTANTES:
# =============================================================================
# 1. Las variables que empiecen con DEFAULT_ se usan como valores iniciales
#    si no hay configuración guardada previa
#
# 2. Las rutas pueden ser absolutas o relativas al directorio del proyecto
#
# 3. Los valores booleanos deben escribirse como 'true' o 'false' (minúsculas)
#
# 4. Las variables comentadas (#) son opcionales y el sistema usará valores
#    por defecto inteligentes si no se especifican
#
# 5. Este archivo NO debe contener información sensible como claves o tokens
#
# 6. Para usar estas variables, copia este archivo como '.env' y edítalo
# =============================================================================
